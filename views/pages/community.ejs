    <script>
        function addComment(event) {
            event.preventDefault();
            
            const commentText = document.getElementById('textAreaExample').value;
            
            if (commentText.trim() === '') {
                alert('Comment cannot be empty');
                return;
            }
            
            const commentContainer = document.createElement('div');
            commentContainer.className = 'd-flex flex-start mb-4';
            
            const commentHTML = `
                <img class="rounded-circle shadow-1-strong me-3"
                    src="https://img.icons8.com/papercut/60/user.png" alt="avatar" width="65" height="65" />
                <div class="card w-100">
                    <div class="card-body p-4">
                        <div class="">
                            <h5>subham</h5>
                            <p class="small">Just now</p>
                            <p>${commentText}</p>
                        </div>
                    </div>
                </div>
            `;
            
            commentContainer.innerHTML = commentHTML;
            document.getElementById('comments-container').prepend(commentContainer);
            
            document.getElementById('textAreaExample').value = '';
        }
